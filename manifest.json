{

    "manifest_version": 2,
    "name": "Digital Stickynotes",
    "version": "1.0",

    "description": "Allows for the creation of digital stickynotes on the browser",

    "icons": {
        "48": "icons/border-48.png"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["functions/getCoords.js", "functions/getSelectionText.js", "functions/createTextbox.js", "functions/moveTextbox.js", "functions/loadTextboxes.js", "functions/deleteTextbox.js", "functions/textboxToBackground.js", "functions/textboxToForeground.js", "functions/initializeTextbox.js", "extension.js"]
        }
    ],

    "permissions": [
        "storage"
    ]
}
